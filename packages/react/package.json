{
	"name": "@hono-query/react",
	"version": "0.1.0",
	"type": "module",
	"author": "Thomascogez <thomas.cogez@gmail.com>",
	"homepage": "https://github.com/Thomascogez/hono-query",
	"bugs": {
		"url": "https://github.com/Thomascogez/hono-query/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Thomascogez/hono-query.git"
	},
	"publishConfig": {
		"access": "public"
	},
	"exports": {
		"./package.json": "./package.json",
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"scripts": {
		"build": "tsdown && bun run generate-types",
		"build:watch": "tsdown --watch",
		"generate-types": "bun x dts-bundle-generator ./src/index.ts --external-inlines=@hono-query/shared --out-file ./dist/index.d.ts --no-check --silent --sort",
		"check:types": "tsc --noEmit",
		"test:single": "vitest run",
		"test:watch": "vitest"
	},
	"devDependencies": {
		"@hono-query/shared": "workspace:*",
		"@hono-query/typescript-config": "workspace:*",
		"@testing-library/react": "^16.3.0",
		"@types/react": "^19.2.2",
		"@types/react-dom": "^19.2.2",
		"jsdom": "^27.0.1",
		"react": "^19.2.0",
		"react-dom": "^19.2.0"
	},
	"files": [
		"dist"
	]
}
